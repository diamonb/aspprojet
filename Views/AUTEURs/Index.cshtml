@model IEnumerable<biblioteque.Models.AUTEUR>

@{
    ViewBag.Title = "Accueil";
}

<h2>AUTEUR</h2>

<p>
    @Html.ActionLink("Creer un nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prenom_auteur)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom_auteur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prenom_auteur)
        </td>
        <td>
            @Html.ActionLink("Editer", "Edit", new { id=item.id_auteur }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_auteur }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id_auteur })
        </td>
    </tr>
}

</table>
