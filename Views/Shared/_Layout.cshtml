<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GESTION DE BIBLIOTEQUE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/dataTables.bootstrap.min.css")
    @Styles.Render("https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap.min.css")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GESTBIBLIOTEQUE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("AUTEUR", "Index", "AUTEURs")</li>
                    <li>@Html.ActionLink("EDITEUR", "Index", "EDITEURs")</li>
                    <li>@Html.ActionLink("COURANT LITTERAIRE", "Index", "courant_litteraire")</li>
                    <li>@Html.ActionLink("GENRE", "Index", "genres")</li>
                    <li>@Html.ActionLink("LIVRE", "Index", "livres")</li>
                    <li>@Html.ActionLink("EDITE", "Index", "EDITEs")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GESTBIBLIOTEQUE</p>
        </footer>
    </div>

    @*@@Scripts.Render("https://code.jquery.com/jquery-3.5.1.js")
    @Scripts.Render("https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js")
    @Scripts.Render("https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap.min.js")*@
    @Scripts.Render("~/Scripts/jquery-3.5.1.js")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.min.js")
    @Scripts.Render("~/Scripts/monscript.js")
    @RenderSection("scripts", required: false)
</body>
</html>
